<h5 style="margin-left: 2%;">Create</h5>

<form style="width: 60%; margin-left: 5%;" action="/create" method="POST">
  <div class="form-group">
    <label for="product_name">Name</label>
    <input type="text" class="form-control" name="name">
  </div>
  <div class="form-group">
    <label for="product_name">Headquarters number</label>
    <input type="text" class="form-control" name="headquarters_number">
  </div>
  <div class="form-group">
    <label for="product_name">Created at</label>
    <input type="date" class="form-control" name="created_at" placeholder="Example: 2020-09-04T02:13:16.000Z">
  </div>
  <div class="form-group">
    <label for="product_name">Updated at</label>
    <input type="date" class="form-control" name="updated_at">
  </div>

  <button type="submit" class="btn btn-primary">Create</button>
</form>